extends layout

block content
    div.dashwrapper
        h2#username #{user.username}
        form(id="makeyadda" action='/users/post' method='post')
                img(id="useravatar" src="../images/avatar.png" width="100px" height="100px")
                textarea#yaddatxtarea(type="textarea" name="text" placeholder="What's on Your mind #{user.username}?" rows="3" class="form-control" maxlength="167")
                input(type="text" id="tags" name="tags" placeholder="Enter #tags here")
                p Remaining characters: 
                p#count
                    | 
                    br
                    br
                    div.row
                        div.file-upload
                            label(for="file-input")
                                img(id="file-upload-icon")
                            input(id="file-input" type='file' name='image' placeholder='Upload image' accept="image/*")
                        input(id="postYadda" type='submit' value='Yadda')

    | 
    br
    div.dashwrapper

        | 
        br   
        div#searchbar
            input(type='text' name='search' placeholder='Search for #tags...')        
        div#posts
            p Posts show here
                



    div.Tags
    script(type="module" src='/javascripts/main.js')
