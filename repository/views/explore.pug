extends layout

block content
    div.dashwrapper
        h2= subtitle
        div.search-container 
            form(action='/users/' method='post')
                input(type='text' name='tag' placeholder='Search for #tags or Users...')
                button(id="search" type='submit' value='tags')
                        i(class="fas fa-search")
    
    |
    br
    div.dashwrapper
        |
        br
        div.user-container
            div.container
                div.profile-image
                    img(src="../images/avatar/" + user.avatar onerror="this.src='../images/avatar.png'" width="150px" height="150px")
                div.user-profile
                    div.user-head
                        h2.user-name 
                            a(href="/profile") #{user.username}
                    div.user-bio
                        p #[span #{user.firstName} #{user.lastName}]
                    div.follow
                        form(action='/follow' method='post')
                            input.btn.follow-btn(type='submit' value='follow')
