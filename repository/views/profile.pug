extends layout

block content
    div.profilewrapper
        div.avatar-container
            img(id="useravatar-profile" src="../images/avatar/" + user.avatar onerror="this.src='../images/avatar.png'")

        div.profileheader
            div.profile_top
                h2#username #{user.username}
                    if !user
                        div.followuser
                            input(id="followbtn" type="button" value="Follow")
                    
                div.profile_mid
                    ul.follow
                        li#yaddacount 0
                        p#count Yaddas |
                        li#Followers 0
                        p#count Followers |
                        li#Following #{user.following.length}
                        p#count Following
                
                div.profile_bot
                    h3#firstname_lastname #{user.firstName} #{user.lastName}
        | 
        br
        div.edit-avatar
            form(action='/editAvatar' method='post' enctype="multipart/form-data")
                input(id="file-upload" type="file" name="avatar" accept="image/*")
                | 
                br
                input(id="save-avatar" type='submit' value='Save Avatar')


    div.theme
        div.profilewrapper
            h2#theme Dark Theme
            div.sliderplaceholder
                label.switch
                    input#checkbox(type="checkbox")
                    div.slider.round

    |
    br
    div.profilewrapper
        div.search-container 
            form(action='/find' method='post')
                input(type='text' name='search' placeholder='Search for #tags or Users...')
                button(id="search" type='submit' value='Search')
                    i(class="fas fa-search")
                
    | 
    br
    div.profilewrapper 
        |
        br       
        div.post-container
            p User posts show here
    

        
    