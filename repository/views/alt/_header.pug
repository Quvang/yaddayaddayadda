header
  nav
    ul
      li: a(style="float:left" href="/alt/") Home
      li: a(style="float:left" href="/") Main
      li
        div(id="clock" style="float:right")
          div(id="time")
            div 
              span(id="date") 00 
              span Date
            div
              span(id="month") 00
              span Month
            div 
              span(id="hours") 00
              span Hours
            div
              span(id="minutes") 00
              span Minutes
            div
              span(id="seconds") 00
              span Seconds
            div
              span(id="ampm") AM
              span AM
      if !user
        li: a(style="float:right" href="/alt/signIn") Sign In
      if user && user.role == 'member'
        li: a(id="signout" style="float:right" href="/alt/signOut") Sign Out
        li: a(style="float:right" href="/alt/account") Account
        li: span Logged in as #{user.username}
          img(src="../images/avatar/" + user.avatar onerror="this.src='../images/avatar.png'" width="25px" height="25px")
      if user && user.role == 'admin'
        li: a(id="signout" style="float:right" href="/alt/signOut") Sign Out
        li: a(style="float:right" href="/alt/account") Account
        li: a(style="float:right" href="/alt/adminPanel") Admin Control Panel
        li: span Logged in as #{user.username}
          img(src="../images/avatar/" + user.avatar onerror="this.src='../images/avatar.png'" width="25px" height="25px")
        
      
